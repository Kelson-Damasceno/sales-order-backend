{
  "compilerOptions": {
    "target": "ES2024",
    "module": "node16",
    "moduleResolution": "node16",
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "rootDir": "./",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },

  "include": [
    "srv",
    "src",
    "types"
  
  ],

  "exclude": ["node_modules"],

}
